        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginLeft">@dimen/actionBarMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/actionBarMarginLeft</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:gravity">bottom|center_vertical</item>
    </style>
    <style name="smallapp_browser_smallapp_control_area_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginRight">48dp</item>
