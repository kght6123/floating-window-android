    <style name="smallapp_browser_move_control_area_left">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/actionBarMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/actionBarMarginLeft</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="smallapp_browser_move_control_area_right">
