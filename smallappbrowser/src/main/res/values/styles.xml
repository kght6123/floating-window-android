<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="smallapp_browser_webview_control_area_left">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_marginLeft">@dimen/actionBarMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/actionBarMarginLeft</item>
        <item name="android:gravity">top|center_vertical</item>
    </style>
    <style name="smallapp_browser_webview_control_area_right">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:layout_marginLeft">@dimen/actionBarMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/actionBarMarginLeft</item>
        <item name="android:gravity">top|center_vertical</item>
    </style>
    <style name="smallapp_browser_webview_control_area_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="smallapp_browser_webview_control_area_bottom2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="smallapp_browser_smallapp_control_area_left">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_marginLeft">@dimen/actionBarMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/actionBarMarginLeft</item>
        <item name="android:gravity">bottom|center_vertical</item>
