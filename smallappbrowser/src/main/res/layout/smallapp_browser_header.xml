<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:hardwareAccelerated="true" >

    <ImageView
        android:id="@+id/back"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="@dimen/actionBarIconSize"
        android:layout_height="@dimen/actionBarIconSize"
        android:src="@drawable/ic_back" 
        android:contentDescription="@string/back"
        android:alpha="@dimen/btnAlpha"
        android:hardwareAccelerated="true" />

    <ImageView
        android:id="@+id/forward"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="@dimen/actionBarIconSize"
        android:layout_height="@dimen/actionBarIconSize"
        android:src="@drawable/ic_forward" 
        android:contentDescription="@string/forward"
        android:alpha="@dimen/btnAlpha"
        android:hardwareAccelerated="true" />

    <ImageView
        android:id="@+id/chrome"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="@dimen/actionBarIconSize"
        android:layout_height="@dimen/actionBarIconSize"
        android:src="@drawable/ic_chrome" 
        android:contentDescription="@string/chrome"
        android:alpha="@dimen/btnAlpha"
        android:hardwareAccelerated="true" />

    <ImageView
        android:id="@+id/option_menu"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="@dimen/actionBarIconSize"
        android:layout_height="@dimen/actionBarIconSize"
        android:src="@drawable/ic_menu_more" 
        android:contentDescription="@string/menu"
        android:alpha="@dimen/btnAlpha"
        android:hardwareAccelerated="true" />

</LinearLayout>
