<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.kght6123.smallappbrowser"
    android:sharedUserId="jp.kght6123">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".application.SharedDataApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <service android:name="jp.kght6123.multiwindow.MultiFloatWindowApplicationService"
            android:enabled="true"
            android:exported="false"
            android:process=":local">
        </service>

        <activity
            android:name=".activity.HttpActionDelegateActivity"
            android:label="@string/app_browser_name"
            android:excludeFromRecents="true"
            android:theme="@style/Translucent"
            android:icon="@drawable/ic_chrome"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
            <!--intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter-->
        </activity>

        <activity
            android:name=".activity.BrowserChangerActivity"
            android:label="@string/app_browser_changer_name"
            android:excludeFromRecents="true"
            android:theme="@style/Translucent"
            android:icon="@drawable/ic_chrome"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
        </activity>

        <service android:name=".SmallBrowserApplicationService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="jp.kght6123.multiwindow.intent.action.MAIN" />
                <category android:name="jp.kght6123.multiwindow.intent.category.LAUNCHER" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.SmallBrowserApplicationTestActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/test_app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
