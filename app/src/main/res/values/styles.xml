<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/activity_slide_up</item>
        <item name="android:windowExitAnimation">@anim/activity_slide_down</item>
    </style>

    <style name="Theme.FloatingWindow.Popup" parent="@android:style/Theme.DeviceDefault.Light" >

        <item name="android:windowIsFloating">false</item><!-- これがないとロック画面に表示されないらしい -->
        <item name="android:windowSoftInputMode">stateUnchanged</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@style/PopupAnimation</item>
        <item name="android:windowCloseOnTouchOutside">false</item><!-- これがtrueだと、外側を洗濯した時に閉じられる -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>
</resources>
