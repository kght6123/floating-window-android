<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="jp.kght6123.smalllittleappviewer.MultiFloatWindowTestActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="fill_horizontal"
		android:padding="20dp">
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/remote_start_button"
			android:text="@string/remote_text_start" />
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/remote_add_button"
			android:text="@string/remote_text_add" />
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/remote_stop_button"
			android:text="@string/remote_text_stop" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="fill_horizontal"
		android:padding="20dp">
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/widget_start_button"
			android:text="@string/widget_text_start" />
		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/widget_stop_button"
			android:text="@string/widget_text_stop" />
	</LinearLayout>

</LinearLayout>
